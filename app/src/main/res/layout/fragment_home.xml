<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:layout_margin="10dp"
    tools:context=".ui.home.HomeFragment">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
      android:orientation="vertical">
      <ImageView
          android:layout_width="match_parent"
          android:layout_height="159dp"
          android:src="@drawable/araguaina"
          android:layout_gravity="center"
          />

      <TextView
          android:id="@+id/text_cursos"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="@string/cursos_ofertados"
          android:textAppearance="@style/TextAppearance.AppCompat.Title"
          android:textAlignment="center"
          android:layout_margin="10dp"
          android:layout_gravity="center"/>

      <TextView
          android:id="@+id/text_fic"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:textColor="@color/fic"
          android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
          android:text="@string/fic_qualificacao"/>

      <TextView
          android:id="@+id/text_proeja"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:textAlignment="viewEnd"
          android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle2"
          android:text="@string/proeja"/>

      <TextView
          android:id="@+id/text_operador"
          android:textAlignment="viewEnd"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="@string/operador_de_computador"/>

      <TextView
          android:id="@+id/text_tecnicos"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:textColor="@color/tecnicos"
          android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
          android:text="@string/tecnicos"/>

      <TextView
          android:id="@+id/text_integrado"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:textAlignment="viewEnd"
          android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle2"
          android:text="@string/integrado_regular"/>

      <TextView
          android:id="@+id/text_técnico_biotecnologia"
          android:textAlignment="viewEnd"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="@string/tecnico_em_biotecnologia"/>

      <TextView
          android:id="@+id/text_técnico_informatica"
          android:textAlignment="viewEnd"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="@string/tecnico_em_informatica"/>

      <TextView
          android:id="@+id/text_subsequente"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:textAlignment="viewEnd"
          android:layout_marginTop="10dp"
          android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle2"
          android:text="@string/subsequente"/>

      <TextView
          android:id="@+id/text_tecnico_analise_clinicas"
          android:textAlignment="viewEnd"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="@string/tecnico_em_analises_clinicas"/>

      <TextView
          android:id="@+id/text_tecnico_em_enfermagem"
          android:textAlignment="viewEnd"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="@string/tecnico_em_enfermagem"/>

      <TextView
          android:id="@+id/text_graduacao"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:textColor="@color/graducao"
          android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
          android:text="@string/graduacao"/>

      <TextView
          android:id="@+id/text_tecnologico"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:textAlignment="viewEnd"
          android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle2"
          android:text="@string/tecnologico"/>

      <TextView
          android:id="@+id/text_analise_e_desenvolvimento_de_sistemas"
          android:textAlignment="viewEnd"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="@string/analise_e_desenvolvimento_de_sistemas"/>

      <TextView
          android:id="@+id/text_gestao_da_producao_industrial"
          android:textAlignment="viewEnd"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="@string/gestao_da_producao_industrial"/>

      <TextView
          android:id="@+id/text_pos_graduacao"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:textColor="@color/pos_graduacao"
          android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
          android:text="@string/pos_graduacao"/>

      <TextView
          android:id="@+id/text_especializacao_lato_sensu"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:textAlignment="viewEnd"
          android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle2"
          android:text="@string/especializacao_lato_sensu"/>

      <TextView
          android:id="@+id/text_formacao_docente_ambiental"
          android:textAlignment="viewEnd"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="@string/formacao_docente_ambiental"/>


   </LinearLayout>






</ScrollView>