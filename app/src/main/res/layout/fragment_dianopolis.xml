<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:layout_margin="10dp"
    tools:context=".ui.dianopolis.DianopolisFagment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="159dp"
        android:src="@drawable/dianopolis"
        android:layout_gravity="center"
        />

    <TextView
        android:id="@+id/text_cursos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/cursos_ofertados"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:textAlignment="center"
        android:layout_margin="10dp"
        android:layout_gravity="center"/>

        <TextView
            android:id="@+id/text_tecnicos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/tecnicos"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
            android:text="@string/tecnicos"/>


        <TextView
            android:id="@+id/text_cursos_tecnicos_presenciais"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle2"
            android:text="@string/cursos_tecnicos_presenciais"/>

        <TextView
            android:id="@+id/text_integrado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="viewEnd"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle2"
            android:text="@string/integrado_regular"/>

        <TextView
            android:id="@+id/text_tecnico_em_agropecuaria"
            android:textAlignment="viewEnd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/tecnico_em_agropecuaria"/>

        <TextView
            android:id="@+id/text_tÃ©cnico_informatica"
            android:textAlignment="viewEnd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/tecnico_em_informatica"/>

        <TextView
            android:id="@+id/text_graduacao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/graducao"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
            android:text="@string/graduacao"/>

        <TextView
            android:id="@+id/text_bacharelado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="viewEnd"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle2"
            android:text="@string/bacharelado"/>

        <TextView
            android:id="@+id/text_engenharia_agronomica"
            android:textAlignment="viewEnd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/engenharia_agronomica"/>

        <TextView
            android:id="@+id/text_licenciatura"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="viewEnd"
            android:layout_marginTop="10dp"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle2"
            android:text="@string/licenciatura"/>

        <TextView
            android:id="@+id/text_computacao"
            android:textAlignment="viewEnd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/licenciatura_em_computacao"/>

        <TextView
            android:id="@+id/text_pos_graduacao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/pos_graduacao"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
            android:text="@string/pos_graduacao"/>

        <TextView
            android:id="@+id/text_especializacao_lato_sensu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="viewEnd"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle2"
            android:text="@string/especializacao_lato_sensu"/>

        <TextView
            android:id="@+id/text_producao_agropecuaria"
            android:textAlignment="viewEnd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/producao_agropecuaria"/>

    </LinearLayout>

</ScrollView>